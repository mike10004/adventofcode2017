    "version": "0.2.0",
    "configurations": [
        {
            "name": "advent13 (gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/advent13/bin/packetscanners",
            "args": ["0", "24", "quiet", "<", "${workspaceFolder}/advent13/testinput.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent10: test",
            "cwd": "${workspaceFolder}/advent10",
            "program": "${workspaceFolder}/advent10/test.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent07: launch",
            "program": "${workspaceFolder}/advent07/circus.js",
            "args": [
                "${workspaceFolder}/advent07/testinput1.txt"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent11: launch",
            "cwd": "${workspaceFolder}/advent11",
            "program": "${workspaceFolder}/advent11/hexed.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent12: test",
            "cwd": "${workspaceFolder}/advent12",
            "program": "${workspaceFolder}/advent12/plumber.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent12: run",
            "cwd": "${workspaceFolder}/advent12",
            "program": "${workspaceFolder}/advent12/plumber.js",
            "args": [
                "${workspaceFolder}/advent12/input.txt"
            ]
        },
   ]
}