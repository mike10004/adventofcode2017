    "version": "0.2.0",
    "configurations": [
        {
            "name": "python: current file",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {},
            "envFile": "${workspaceFolder}/.env",
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent10: test",
            "cwd": "${workspaceFolder}/advent10",
            "program": "${workspaceFolder}/advent10/test.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent07: launch",
            "program": "${workspaceFolder}/advent07/circus.js",
            "args": [
                "${workspaceFolder}/advent07/testinput1.txt"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent11: launch",
            "cwd": "${workspaceFolder}/advent11",
            "program": "${workspaceFolder}/advent11/hexed.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent12: test",
            "cwd": "${workspaceFolder}/advent12",
            "program": "${workspaceFolder}/advent12/plumber.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "advent12: launch",
            "cwd": "${workspaceFolder}/advent12",
            "program": "${workspaceFolder}/advent12/plumber.js",
            "args": [
                "${workspaceFolder}/advent12/input.txt"
            ]
        },
         {
            "type": "node",
            "request": "launch",
            "name": "advent14: launch",
            "cwd": "${workspaceFolder}/advent14",
            "program": "${workspaceFolder}/advent14/defrag.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mocha: current file",
            "program": "${workspaceFolder}/advent16/node_modules/mocha/bin/_mocha",
            "cwd": "${fileDirname}",
            "stopOnEntry": false,
            "args": [
                "--no-timeouts",
                "${file}"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node: current file",
            "cwd": "${fileDirname}",
            "stopOnEntry": false,
            "program": "${file}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mocha: test.js",
            "program": "${fileDirname}/node_modules/mocha/bin/_mocha",
            "cwd": "${fileDirname}",
            "stopOnEntry": false,
            "args": [
                "--no-timeouts",
                "${fileDirname}/test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
  ]
}